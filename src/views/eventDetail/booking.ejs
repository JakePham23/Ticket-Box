<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Ticket Box</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/booking.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=book_online,calendar_today,location_on" />
  </head>
  <body>

    <div class="container">
      <!-- Ticket Selection -->
      <div class="ticket-selection">
        <div class="ticket-selection-header">
          <h2>Select Ticket</h2>
          <button class="stage-layout-btn" id="stagelayout-btn">Stage Layout</button>
        </div>
        <div class="ticket-table">
          <div class="ticket-table-header">
            <span>Ticket Type</span>
            <span>Quantity</span>
          </div>
          <div id="tickets" data-ticket-info="<%- encodeURIComponent(JSON.stringify(ticketTypes)) %>">
            <!-- Tickets will be rendered here -->
          </div>
        </div>
        <div id="pagination" class="pagination-container">
          <button id="prevPage" class="pagination-btn">Previous</button>
          <span id="pageInfo" class="pagination-info"></span>
          <button id="nextPage" class="pagination-btn">Next</button>
        </div>
      </div>
      

      <!-- Order Summary -->
      <div class="order-summary">
        <p id="order-title">Your Order</p>
        <h3><%= event.title %></h3>
        <p>
          <span class="material-symbols-outlined">calendar_today</span>
          <%= event.endDate.toString().slice(0,24) %> %>
        </p>
        <p>
          <span class="material-symbols-outlined">location_on</span>
          <%= event.addressProvince%>, <%= event.addressDetail %>
        </p>
        <hr class="divider"></hr>
        <h3 class="pricing-title">Pricing</h3>
        <div class="pricing" id="pricing">
          <!-- Pricing details will be rendered here -->
        </div>
        <hr class="divider"></hr>
        <div class="total">
          <div class="icon-container">
            <span class="material-symbols-outlined" id="book-online-icon">book_online</span>
            <span id="total-tickets">0</span>
          </div>
          <div id="total-price">0â‚«</div>
        </div>

        <div class="btn-container">
          <button class="cart-btn">
            Add to cart
          </button>
          <button class="book-now-btn" id="booknow-btn">Book now</button>
        </div>
      </div>
    </div>

    <script src="/js/booking/booking.js"></script>
    <script src="/js/booking/bookingStorage.js"></script>
    <script src="/js/booking/addToCart.js" type="module"></script>
  </body>
</html>