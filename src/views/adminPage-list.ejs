<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ticket Box - Admin Page</title>
  <!-- Google Web Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
          href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Lora:wght@600;700&display=swap"
          rel="stylesheet"
  />
  <!-- Icon Font Stylesheet -->
  <link
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet"
  />
  <link
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
          rel="stylesheet"
  />
  <link href="css/admin-style.css" rel="stylesheet" />
</head>
<body>
  <%- include('admin-head') -%>
    <div style="padding-top:80px;" class="admin-container">
        <!-- Nút chuyển đến trang tạo sự kiện -->
        <button class="save-btn" onclick="redirectToCreateEvent()">Create Event</button>

        <label style="margin: 20px 0px">Events Currently On Sale</label>

        <!-- Thanh tìm kiếm -->
        <div style="margin: 20px 0px" class="search-container">
            <input type="text" class="search-input" placeholder="Search events..." id="searchInput">
        </div>

        <div class="event-wrapper">
            <!-- Sự kiện 1 -->
            <button class="event-item" onclick="redirectToEventInfo(1)">
                <img src="/img/event1.jpg" alt="Event 1">
                <div class="event-info">
                    <h3>Event 1</h3>
                    <p>Date: 2023-08-01</p>
                    <p>Time: 18:00</p>
                </div>
            </button>

            <!-- Sự kiện 2 -->
            <button class="event-item" onclick="redirectToEventInfo(2)">
                <img src="/img/event2.jpg" alt="Event 2">
                <div class="event-info">
                    <h3>Event 2</h3>
                    <p>Date: 2023-09-01</p>
                    <p>Time: 19:00</p>
                </div>
            </button>

            <!-- Sự kiện 3 -->
            <button class="event-item" onclick="redirectToEventInfo(3)">
                <img src="/img/event2.jpg" alt="Event 2">
                <div class="event-info">
                    <h3>Event 3</h3>
                    <p>Date: 2023-09-01</p>
                    <p>Time: 19:00</p>
                </div>
            </button>

            <!-- Các sự kiện khác tương tự -->
        </div>
    </div>
</body>
</html>
